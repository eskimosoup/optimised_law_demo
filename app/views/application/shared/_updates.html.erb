<%= content_for :footer do %>
  <script>
    $('.collected-articles').slick({
      slidesToShow: 3,
      slidesToScroll: 3,
      infinte: true,
      dots: true,
      arrows: true,
      responsive: [
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        },
      ]
    });
  </script>
<% end %>

<div class="home-content-block">
  <div class="row collapse">
    <div class="small-12 columns">
      <div class="content-block" data-animation-type="slideInRight">
        <div class="collected-articles-title">
          <h6 class="left">Latest news</h6>

          <%#= link_to (image_tag 'components/icons/expand.png', alt: 'Expand'), '#', class: 'right', title: 'Expand' %>
        </div>

        <div class="collected-articles">
          <%= render partial: 'articles/home_article', collection: @presented_articles, as: :article_presenter %>
        </div>
      </div>
    </div>
  </div>
</div>
