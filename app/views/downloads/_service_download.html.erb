<div class="service-download featured" id="downloads">
  <div class="row">
    <div class="medium-4 columns">
      <div class="download-image-wrap">
        <%= @presented_download.show_image %>
      </div>
    </div>

    <div class="medium-8 columns">
      <div class="service-download-content">
        <div class="service-download-category">
          <%= @presented_download.category_name %>
        </div>

        <div class="service-download-title">
          <%= @presented_download.title %>
        </div>

        <div class="service-download-overview">
          <%= @presented_download.summary %>
          <%= @presented_download.download_button %>
        </div>
      </div>
    </div>
  </div>
</div>
