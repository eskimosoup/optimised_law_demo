<div class="frequently-asked-question" <%= "data-equalizer-watch=faq-#{group.first.id}" if defined? group %>>
  <div class="question-mark" aria-hidden="true">
    Q
  </div>

  <div class="frequently-asked-question-content">
    <%= frequently_asked_question_presenter.linked_question %>

    <div class="frequently-asked-question-answer frequently-asked-question-answer-<%= frequently_asked_question_presenter.id %> hide">
      <%= frequently_asked_question_presenter.answer %>
    </div>
  </div>
</div>
