<title><%= "#{@title} - " if @title %><%= global_site_settings['Name'] %></title>

<meta name="description" content="<%= @meta_description %>" />
<meta name="keywords"    content="<%= @meta_tags %>" />
<meta name="viewport" content="width=device-width, initial-scale=1">

<%= stylesheet_link_tag    'application', media: 'all' %>
<%= csrf_meta_tags %>

<%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/webfont/1.5.18/webfont.js' %>
<%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js' %>

<script>
  WebFont.load({
    google: {
      families: ['Lato:300,300italic,400,400italic,900', 'Droid Serif', 'Merriweather:400,600,700',
                'Open+Sans:400,600,700', 'Montserrat:400,700', 'PT+Serif:400']
    }
  });
</script>

