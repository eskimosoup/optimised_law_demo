<title><%= "#{@title} - " if @title %><%= global_site_settings['Name'] %></title>

<meta name="description" content="<%= @meta_description %>" />
<meta name="keywords"    content="<%= @meta_tags %>" />
<meta name="viewport" content="width=device-width, initial-scale=1">

<%= stylesheet_link_tag    'application', media: 'all' %>
<%= csrf_meta_tags %>

<link href='http://fonts.googleapis.com/css?family=Lato|Droid+Serif|Merriweather:400,600,700|Open+Sans:400,600,700' rel='stylesheet' type='text/css'>

<%= javascript_include_tag 'application' %>

<%= yield :head %>
