<div class="top">
  <div class="client-area-content hide" id="client-area-content">
    Content
  </div>

  <div class="client-area-toggle">
    <%= link_to 'Client Area', '#client-area-content', class: 'toggle-class right', data: { container: '.client-area-content', class: 'hide', return: 'true', animation_type: 'slideInRight' } %>
  </div>

  <div class="header">
    <%= link_to root_url, title: global_site_settings['Name'], class: 'logo left' do %>
      <%= image_tag 'layout/header/logo.png', alt: global_site_settings['Name'] %>
    <% end %>

    <ul class="secondary navigation right" data-animation-type="slideInRight">
      <%= nested_menu_items(menu_items: @header_aside_menu.menu_items) %>
    </ul>
  </div>

  <nav class="row">
    <div class="small-12 columns position-static">
      <ul class="primary navigation">
        <%= nested_menu_items(menu_items: @header_menu.menu_items) %>

        <li>
          <%= link_to '#', class: 'icon-based reveal-dropdown', title: 'Offices' do %>
            <%= image_tag 'components/navigation/pin.png', alt: 'Offices' %>
          <% end %>
          <div class="dropdown">
            <ul data-animation-type="slideInLeft">
              <li><%= link_to 'Location', '#' %></li>
              <li><%= link_to 'Location', '#' %></li>
              <li><%= link_to 'Location', '#' %></li>
              <li><%= link_to 'Location', '#' %></li>
              <li><%= link_to 'Location', '#' %></li>
              <li><%= link_to 'Location', '#' %></li>
              <li><%= link_to 'Location', '#' %></li>
            </ul>
          </div>
        </li>

        <li>
          <%= link_to '#', class: 'icon-based reveal-dropdown', title: 'Search' do %>
            <%= image_tag 'components/navigation/search.png', alt: 'Search' %>
          <% end %>
          <div class="dropdown">
            <%= render 'lawyer_searches/form' %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</div>
