<%= render 'optimadmin/shared/header/main_title', title: 'Manage Business Partners' %>

<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: 'Business Partner', object: BusinessPartner, path: new_business_partner_path %>
    <%= render 'optimadmin/shared/search_form' %>
    <%= render 'optimadmin/shared/module/index/pagination' %>
    <!--
      <%= render 'optimadmin/shared/module/index/order', options: [['Username', 'username']] %>
    -->
    <%= render 'optimadmin/shared/module/index/recycle_bin', items: @business_partners.size, path: root_url %>
  </div>

  <div class="row collapse module-list-index header">

      <%= list_item 'large-1 hide-for-medium-down' do %>
        <%= link_to octicon('settings') %>
      <% end %>





      <%= list_item 'large-6 small-8' do %>
        Title
      <% end %>



    <%= list_item 'large-2 hide-for-medium-down' do 'Image' end %>


    <%= list_item { 'Display' } %>
    <%= list_item { 'Edit' } %>

    <%= list_item 'large-1 hide-for-medium-down text-center last' do 'Delete' end %>
  </div>

  <div class='module-sortable' data-module="BusinessPartner">
   <%= render partial: 'business_partner', collection: @business_partners, as: :business_partner_presenter %>
  </div>
  <%= paginate @business_partners %>
</div>
