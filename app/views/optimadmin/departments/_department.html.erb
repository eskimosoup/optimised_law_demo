<div class="row collapse module-list-index <%= cycle('odd', 'even') %>" data-equalizer="module-list" id="item_<%= department_presenter.id %>">
  <div class="large-1 small-2 columns" data-equalizer-watch="module-list">
    <%= department_presenter.detail_toggle_link %>
  </div>

  <div class="large-5 small-6 columns" data-equalizer-watch="module-list">
    <%= department_presenter.name %>
  </div>

  <div class="large-2 hide-for-medium-down columns" data-equalizer-watch="module-list">
    <%= department_presenter.edit_image(:image) %>
  </div>

  <div class="large-1 small-4 columns" data-equalizer-watch="module-list">
    <%= department_presenter.toggle_link %>
  </div>

  <div class="large-1 small-4 columns" data-equalizer-watch="module-list">
    <%= department_presenter.show_link %>
  </div>

  <div class="large-1 small-4 columns" data-equalizer-watch="module-list">
    <%= department_presenter.edit_link %>
  </div>

  <div class="large-1 hide-for-medium-down columns last" data-equalizer-watch="module-list">
    <%= department_presenter.delete_link %>
  </div>

  <div class="row module-list-detail hide" id="index-list-<%= department_presenter.id %>">
    <div class="small-12 columns module-list-summary last">

    </div>
  </div>
</div>
