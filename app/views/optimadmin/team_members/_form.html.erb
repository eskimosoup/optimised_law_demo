<%= form_for(team_member) do |f| %>
<% if team_member.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(team_member.errors.count, "error") %> prohibited this team_member from being saved:</h2>

    <ul>
      <% team_member.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



  <div class="tabs prevent-flash">
    <ul class="tab-list">
      <li><a href="#tabs-1">Content</a></li>
      <li><a href="#tabs-2">Media</a></li>
      <li><a href="#tabs-3">Settings</a></li>
      <li>
        <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
          <%= octicon('chevron-down') %>
        <% end %>
      </li>
    </ul>

    <%= field_set_tag nil, id: 'tabs-1' do %>
            <div class="field">
        <%= f.label :forename %><br>
        <%= f.text_field :forename %>
      </div>
            <div class="field">
        <%= f.label :surname %><br>
        <%= f.text_field :surname %>
      </div>
            <div class="field">
        <%= f.label :team_member_role_id %><br>
        <%= f.select :team_member_role_id, TeamMember::Role.pluck(:name, :id), prompt: 'Please select' %>
      </div>
            <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>
            <div class="field">
        <%= f.label :primary_phone_number %><br>
        <%= f.text_field :primary_phone_number %>
      </div>
            <div class="field">
        <%= f.label :secondary_phone_number %><br>
        <%= f.text_field :secondary_phone_number %>
      </div>
            <div class="field">
        <%= f.label :mobile_phone_number %><br>
        <%= f.text_field :mobile_phone_number %>
      </div>
            <div class="field">
        <%= f.label :google_plus %><br>
        <%= f.text_field :google_plus %>
      </div>
            <div class="field">
        <%= f.label :twitter %><br>
        <%= f.text_field :twitter %>
      </div>
            <div class="field">
        <%= f.label :linkedin %><br>
        <%= f.text_field :linkedin %>
      </div>
            <div class="field">
        <%= f.label :biography %><br>
        <%= f.text_area :biography, class: 'tinymce' %>
      </div>
          <% end %>

    <%= field_set_tag nil, id: 'tabs-2' do %>

          <div class="field">
      <%= f.image_field :image %>
    </div>
          <% end %>

    <%= field_set_tag nil, id: 'tabs-3' do %>
    <div class="field">
<%= f.label :service_ids, "Services" %><br>
<%= f.select :service_ids, Service.pluck(:name, :id), {  }, { multiple: true } %>
</div>
    <div class="field">
<%= f.label :article_ids, "Articles" %><br>
<%= f.select :article_ids, Article.pluck(:title, :id), {  }, { multiple: true } %>
</div>
    <div class="field">
<%= f.label :testimonial_ids, "Testimonials" %><br>
<%= f.select :testimonial_ids, Testimonial.all.map{|x| ["#{x.author} - #{x.author_company}", x.id]}, {  }, { multiple: true } %>
</div>
            <div class="field">
        <%= f.label :display %><br>
        <%= f.check_box :display %>
      </div>
          <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
