<div class="medium-6 columns" data-equalizer-watch="additional-content">
  <div class="activity-stream">
    <h3>Activity Stream</h3>

    <div class="activity-stream-activity" data-animation-type="slideInDown">
      <div class="row">
        <div class="medium-5 columns">
          <%= image_tag 'http://placehold.it/199x155', class: 'activity-stream-featured-image' %>
        </div>

        <div class="medium-7 columns">
          <div class="activity-time-ago">
            5 min ago
          </div>

          <%= link_to '#', class: 'activity-stream-featured-headline' do %>
            Hachette Chief Leads Book Publishers in Amazon Fight
          <% end %>

          <div class="activity-stream-featured-summary">
            Justin Bieber accused of attempted robbery, LAPD says what you say
          </div>
        </div>
      </div>
    </div>

    <div class="activity-stream-activity" data-animation-type="slideInUp" data-animation-delay="500">
      <div class="row">
        <div class="medium-3 columns">
          <div class="activity-time-ago">
            15 min ago
          </div>
        </div>

        <div class="medium-9 columns">
          <%= link_to '#', class: 'activity-stream-headline' do %>
            How to Capture the Right Moments
          <% end %>
        </div>
      </div>
    </div>

    <div class="activity-stream-activity"  data-animation-type="slideInUp" data-animation-delay="750">
      <div class="row">
        <div class="medium-3 columns">
          <div class="activity-time-ago">
            1 hour ago
          </div>
        </div>

        <div class="medium-9 columns">
          <%= link_to '#', class: 'activity-stream-headline' do %>
            Washington, D.C.: Photos of Then and Now
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
