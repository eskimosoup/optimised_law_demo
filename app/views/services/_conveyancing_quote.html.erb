<div class="conveyancing-quote">
  <div class="row">
    <div class="medium-4 columns">
      <div class="conveyancing-title">
        <h2>
          <%= image_tag 'components/conveyancing-calculator/calculator.png', alt: '' %>
          Conveyancing Quote Calculator
        </h2>
      </div>

      <div class="conveyancing-summary">
        <p>
          This calculator can be used to estimate the charges associated with
          buying or selling a home. To find out whatâ€™s included in our fees
          please <%= link_to 'click here', '#', class: 'invalid-link' %>.
        </p>
      </div>
    </div>

    <div class="medium-8 columns">
      <%= form_tag '' do %>
        <%= field_set_tag 'Select a service' do %>
          <div class="row">
            <div class="medium-4 columns">
              <%= label_tag nil, 'Conveyancing type:', class: 'conveyancing-quote-fieldset-label' %>
            </div>

            <div class="medium-8 columns">
              <div class="conveyancing-quote-radio-group">
                <%= label_tag :conveyancing_type_Sell, 'Sell' %>
                <%= radio_button_tag :conveyancing_type, 'Sell' %>

                <%= label_tag :conveyancing_type_Buy, 'Buy' %>
                <%= radio_button_tag :conveyancing_type, 'Buy' %>

                <%= label_tag :conveyancing_type_Sell___Buy, 'Sell & Buy' %>
                <%= radio_button_tag :conveyancing_type, 'Sell & Buy' %>

                <%= image_tag 'components/conveyancing-calculator/arrow-right.png', alt: '', class: 'conveyancing-quote-new-build-arrow' %>

                <%= label_tag :buy_a_new_build %>
                <%= check_box_tag :buy_a_new_build %>
              </div>
            </div>
          </div>
        <% end %>

        <%= field_set_tag 'Specify property details' do %>
          <div class="row">
            <div class="medium-4 columns">
              <%= label_tag :sale_price, 'Sale price', class: 'conveyancing-quote-fieldset-label conveyancing-property-details-label' %>
            </div>

            <div class="medium-4 columns">
              <%= text_field_tag :sale_price %>
            </div>

            <div class="medium-4 columns">
              <%= select_tag :sale_type, options_for_select(['Freehold', 'Leasehold']), prompt: 'Please select' %>
            </div>
          </div>

          <div class="row">
            <div class="medium-4 columns">
              <%= label_tag :purchase_price, 'Purchase price', class: 'conveyancing-quote-fieldset-label conveyancing-property-details-label' %>
            </div>

            <div class="medium-4 columns">
              <%= text_field_tag :purchase_price %>
            </div>

            <div class="medium-4 columns">
              <%= select_tag :purchase_type, options_for_select(['Freehold', 'Leasehold']), prompt: 'Please select' %>
            </div>
          </div>
        <% end %>

        <%= field_set_tag 'How soon will you need to complete?' do %>
          <div class="conveyancing-quote-radio-group">
            <%= label_tag :completion_time_1_month, '1 month' %>
            <%= radio_button_tag :completion_time, '1 month' %>

            <%= label_tag "completion_time_1-3_months", '1-3 months' %>
            <%= radio_button_tag :completion_time, '1-3 months' %>

            <%= label_tag "completion_time_3-6_months", '3-6 months' %>
            <%= radio_button_tag :completion_time, '3-6 months' %>

            <%= label_tag :completion_time_Don_t_know, "Don't know" %>
            <%= radio_button_tag :completion_time, "Don't know" %>
          </div>
        <% end %>

        <%= submit_tag 'Continue & Get Quote Now >', class: 'conveyancing-submit invalid-link' %>
      <% end %>
    </div>
  </div>
</div>
