<%= content_for :footer do %>
  <script>
    $('.service-awards').slick({
      infinte: true,
      dots: true,
      arrows: false,
      autoplay: true,
      autoplaySpeed: 4000,
      slidesToShow: 4,
      slidesToScroll: 1,
      responsive: [
        {
          breakpoint: 767,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        },
      ]
    });
    $('.service-case-studies').slick({
      infinte: true,
      dots: true,
      arrows: false,
      autoplay: false,
      autoplaySpeed: 4000,
      slidesToShow: 1
    });
  </script>
<% end %>

<section class="service-wrap">
  <% navigation_add "#{@presented_service.department_name}", department_path(@presented_service.department) %>
  <% navigation_add "#{@presented_service.name}", service_path(@service) %>
  <%= render_navigation %>

  <%= render 'services/related_services' %>

  <div class="row">
    <div class="small-12 columns">
      <div class="service-content-wrap" data-animation-type="slideInLeft">
        <div class="row" data-equalizer>
          <div class="hide-for-small medium-3 columns" data-equalizer-watch>
            <div class="service-navigation">
              <%= @presented_service.index_image %>

              <ul class="service-navigation-page-links" id="sidebar-links">
                <li><%= link_to 'Case Studies', '#case-studies' %></li>
                <li><%= link_to 'Testimonials', '#testimonials' %></li>
                <li><%= link_to 'Tweets', '#tweets' %></li>
                <li><%= link_to 'People Helped', '#people-helped' %></li>
                <li><%= link_to 'Downloads', '#downloads' %></li>
                <li><%= link_to 'Client Journey', '#videos' %></li>
                <li><%= link_to 'Meet your Specialists', '#team-members-carousel' %></li>
                <li><%= link_to 'Latest Events', '#events' %></li>
              </ul>
            </div>
          </div>

          <div class="small-12 medium-9 columns" data-equalizer-watch>
            <div class="row">
              <div class="small-12 medium-8 columns">
                <div class="service-content">
                  <h1><%= @presented_service.name %></h1>

                  <%= @presented_service.content %>
                </div>
              </div>

              <div class="small-12 medium-4 columns">
                <div class="team-members-service-overview-link">
                  <div class="row collapse">
                      <div class="small-12 medium-12 large-8 columns">
                        <%= link_to '#team-members-carousel', class: 'text-link' do %>
                          <div class="team-members-service-overview-title">
                            Talk to our
                          </div>

                          <div class="team-members-service-overview-name">
                            <%= @presented_service.department_name %> team
                          </div>
                        <% end %>
                      </div>

                      <div class="hide-for-medium-down large-4 columns text-center">
                        <%= link_to '#team-members-carousel' do %>
                          <%= image_tag 'components/icons/team-members.png', class: 'team-members-service-overview-avatar' %>
                        <% end %>
                      </div>
                  </div>
                </div>

                <%= render 'services/contact_sidebar' %>
              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="row" data-equalizer="additional-content">
        <%= render 'services/content_tabs' if @presented_case_studies.present? %>
        <%= render 'services/activity_stream' if @presented_service_articles.present? %>
      </div>

      <%= render 'services/resources' %>

      <div class="row">
        <%= render 'services/people_helped' if @presented_service.has_people_helped_widget.present? %>
        <%= render 'services/service_video' if @presented_video.present? && @presented_service.has_people_helped_widget.present? %>
        <%= render 'services/service_video_full' if @presented_video.present? && @presented_service.has_people_helped_widget.blank? %>
      </div>

      <%= render 'team_members/service_carousel' %>

      <div class="service-event-focus-wrap">
        <div class="row">
          <div class="large-12 columns">
            <div class="service-awards-wrap">
              <div class="service-awards-service-name">
                <%= @presented_service.name %>
              </div>

              <h6>Awards & Accreditations</h6>

              <ul class="service-awards" id="awards">
                <%= render partial: 'awards/award', collection: @presented_service_awards, as: :award_presenter %>
              </ul>
            </div>
          </div>
        </div>

        <div class="row">
          <%= render 'events/service_calendar' if @presented_service_events.present? %>
        </div>
      </div>
    </div>
  </div>
</section>

<% content_for :call_to_action do %>
  <ul class="service-overview-fixed-contact-methods hide" data-animation-type='slideInLeft' data-animation-delay='500'>
    <%= render 'services/contact_sidebar_content' %>
  </ul>
<% end %>
